# main.py
def sumar(a, b):
    return a + b

def restar(a, b):
    return a - b

def multiplicar(a, b):
    return a * b

def dividir(a, b):
    if b != 0:
        return a / b
    else:
        return "Error: División por cero"

def dividir(a, b):
    try:
        return a / b
    except ZeroDivisionError:
        return "Error: División por cero"

import math

def raiz_cuadrada(a):
    if a >= 0:
        return math.sqrt(a)
    else:
        return "Error: Raíz cuadrada de un número negativo"

if __name__ == "__main__":
    print("Calculadora Básica")
